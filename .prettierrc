{
  "$schema": "https://www.schemastore.org/prettierrc.json",

  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": { "parser": "svelte" }
    },
    {
      "files": ["*.json", ".prettierrc"],
      "options": { "tabWidth": 2 }
    }
  ],

  "trailingComma": "all",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true
}
